<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="OrderSettiongDao">
    
    <select id="findByOrderDate" parameterType="date" resultType="OrderSetting">
        select * from t_ordersetting where orderDate=#{orderDate,jdbcTyp=DATE};
    </select>
    
    <insert id="add" parameterType="OrderSetting">
        insert into t_ordersetting (orderDate,number,reservations)
            values (#{orderDate,jdbcTyp=DATE},#{number},#{reservations});
    </insert>

    <update id="updateNumber" parameterType="OrderSetting">
        update t_ordersetting set number = #{number} where orderDate=#{orderDate,jdbcTyp=DATE};
    </update>
</mapper>